{
  "name": "meteor-demo",
  "private": true,
  "scripts": {
    "start": "NO_HMR=1 meteor run",
    "test": "NO_HMR=1 meteor test --once --driver-package meteortesting:mocha",
    "test-watch": "NO_HMR=1 TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "debug-vue": "vue-devtools"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "@types/bonjour": "^3.5.5",
    "@types/meteor": "^1.4.27",
    "bonjour": "^3.5.0",
    "material-design-icons-iconfont": "^4.0.2",
    "mesh-simplify": "^2.0.0",
    "meteor-node-stubs": "^0.4.1",
    "moment": "^2.22.2",
    "parse-stl": "^1.0.2",
    "prettier": "^1.16.4",
    "roboto-npm-webfont": "^1.0.1",
    "vue": "^2.5.17",
    "vue-3d-model": "^1.0.2",
    "vue-meteor-tracker": "^2.0.0-beta.4",
    "vuetify": "^1.3.7",
    "vuex": "^3.0.1"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.js",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,scss}": [
        "prettier-tslint fix",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/*.min.js"
    ]
  },
  "devDependencies": {
    "@kurosame/tslint-config-vue": "^1.4.0",
    "@types/node": "^11.9.5",
    "@vue/devtools": "^4.1.5",
    "husky": "^1.3.1",
    "prettier-tslint": "^0.4.2",
    "tslint": "^5.13.0",
    "tslint-config-airbnb-base": "^0.3.0",
    "tslint-loader": "^3.5.4"
  }
}
